
# Resource group settings
resource_group_name = "autothrottle-rg"
resource_group_location = "East US"

# Virtual network settings
virtual_network_name = "autothrottle-vnet"
address_space = ["10.0.0.0/16"]

# Subnet settings
subnet_name = "autothrottle-subnet"
subnet_address_prefixes = ["10.0.1.0/24"]

# Network Security Group settings
network_security_group_name = "autothrottle-nsg"

# VM settings
vm_count = 5
vm_size = "Standard_D32as_v5"
admin_username = "azureuser"         # Replace with your preferred admin username
admin_password = "P@ssw0rd123!"       # Replace with a secure password

# Public IP settings
public_ip_allocation_method = "Dynamic"

# OS Disk settings
os_disk_size_gb = 256
storage_account_type = "Premium_LRS"

# Image settings for VM
image_publisher = "Canonical"
image_offer = "0001-com-ubuntu-server-focal"
image_sku = "20_04-lts-gen2"
image_version = "latest"

# Tags
tags = {
  Environment = "Dev"
  Project     = "AutoThrottle"
}
